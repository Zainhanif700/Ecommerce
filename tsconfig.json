{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"] 

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}
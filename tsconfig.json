{
  "compilerOptions": {
    "composite": true, 
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}